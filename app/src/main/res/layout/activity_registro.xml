<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E0018">

    <ImageView
        android:id="@+id/bgWaves"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_waves"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="#DCC89E"
                android:background="@drawable/bg_input_glass_gold"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvTitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="CREAR CUENTA"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/tvSubtitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Únete a nuestra comunidad hoy."
                android:textColor="#DCC89E"
                android:textSize="14sp"
                android:alpha="0.9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Completo"
                    android:textColor="#DCC89E"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/etNombreReg"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_input_glass_gold"
                    android:drawableStart="@drawable/ic_account"
                    android:drawableTint="#DCC89E"
                    android:drawablePadding="12dp"
                    android:hint="Ej. Juan Pérez"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textColor="#DCC89E"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/etCorreoReg"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_input_glass_gold"
                    android:drawableStart="@drawable/ic_email_wine"
                    android:drawableTint="#DCC89E"
                    android:drawablePadding="12dp"
                    android:hint="ejemplo@correo.com"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="#DCC89E"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/etPassReg"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/bg_input_glass_gold"
                    android:drawableStart="@drawable/ic_lock_wine"
                    android:drawableTint="#DCC89E"
                    android:drawablePadding="12dp"
                    android:hint="Mínimo 6 caracteres"
                    android:inputType="textPassword"
                    android:paddingHorizontal="20dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/bg_boton_gradiente"
                    android:text="REGISTRARSE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:elevation="6dp"
                    android:stateListAnimator="@null"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Ya tienes cuenta? "
                    android:textColor="#80FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvIrALogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCEDER"
                    android:textColor="#DCC89E"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
