<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vino_bg">

    <ImageView
        android:id="@+id/bgWaves"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_waves"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="#DCC89E"
        android:background="@drawable/bg_input_glass_gold"
        android:padding="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AJUSTES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-30dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personalizaci칩n"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color de Fondo"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:id="@+id/rgBackgroundColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/rbColorWine"
                        android:text="Vino (Original)"
                        android:textColor="#333333"
                        android:padding="10dp"
                        android:buttonTint="@color/vino_bg"/>

                    <RadioButton
                        android:id="@+id/rbColorBlue"
                        android:text="Azul Claro"
                        android:textColor="#333333"
                        android:padding="10dp"
                        android:buttonTint="@color/azul_claro_bg"/>

                    <RadioButton
                        android:id="@+id/rbColorGreen"
                        android:text="Verde Oscuro"
                        android:textColor="#333333"
                        android:padding="10dp"
                        android:buttonTint="@color/verde_bg"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estilo de Texto"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:id="@+id/rgTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <RadioButton
                        android:id="@+id/rbTextBlack"
                        android:text="Letra Negra (Claro)"
                        android:textColor="#333333"
                        android:padding="10dp"/>

                    <RadioButton
                        android:id="@+id/rbTextWhite"
                        android:text="Letra Blanca (Oscuro)"
                        android:textColor="#333333"
                        android:padding="10dp"/>

                    <RadioButton
                        android:id="@+id/rbTextAuto"
                        android:text="Autom치tico (Ambas)"
                        android:textColor="#333333"
                        android:padding="10dp"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informaci칩n"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Centro Miraflores App"
                        android:textColor="#555555"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvVersionApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Versi칩n 1.0.0 (Beta)"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
